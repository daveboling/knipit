.wrap.no-margin-top
  .row.negatePadding
    .col-xs-12
      .row
        #userControls
          .row
            .col-sm-8 
              .customButton(ng-click='new = true' ng-hide='new') New Deck+
              .customButton(ng-click='new = false' ng-show='new') Cancel
              #newDeck(ng-show='new')
                form(novalidate)
                  .form-group
                    label Deck Name
                    input.form-control(type='text' name='name' ng-minlength='3' ng-model='deck.name')
                    label Category
                    select.form-control(name='category' ng-model='deck.category')
                      include ../partials/categories.jade
                    .customButton(ng-click='createDeck()') Create
            .col-sm-2
              a.gravLink(href='https://en.gravatar.com/'): img.gravatar(alt='Create your own Gravatar!' gravatar-src-once='currentUser.email' gravatar-size="200") 
              p.currentUsername {{currentUser.username}}
              .wins Wins: {{currentUser.wins}}
              .draws Draws: {{currentUser.draws}}
            .col-sm-2
        .col-sm-4.backgroundWhite.negatePadding
          #challenges
              h3 Open Challenges 
              include ../partials/challenges.jade
  
          #history(ng-show='history.length')
              h3 Challenge History
              include ../partials/history.jade

        .col-sm-8.negatePadding

          #yourDecks
            form(novalidate)
              label Sort By Category
              select
                include ../partials/categories.jade
    
            .deck(ng-repeat='deck in decks' data-category='deck.category', ng-click='selectDeck(deck._id)')
              .row
                .title {{deck.name}}
                .col-xs-6
                  .category {{deck.category}}
                  .subCategory {{deck.subCategory || 'No sub-category yet..'}}
                  .numCards {{deck.cards.length + ' cards' || 'No cards yet...'}}
                .col-xs-6
                  .deckRating: i.fa.fa-thumbs-up {{deck.rating.up}}
                  .deckRating: i.fa.fa-thumbs-down {{deck.rating.down}}
                  .deckProgress {{'Progress:' + (deck.report || 0) + '%'}}
