.wrap.no-margin-top
  .row
    .col-xs-12
        #userControls
          .row 
            .col-sm-8
              .customButton(ng-click='new = true' ng-hide='new') New Deck+
              .customButton(ng-click='new = false' ng-show='new') Cancel 
              #newDeck(ng-show='new')
                form(novalidate)
                  .form-group
                    label Deck Name
                    input.form-control(type='text' name='name' ng-minlength='3' ng-model='deck.name')
                    label Category
                    select.form-control(name='category' ng-model='deck.category')
                      option(value='Programming') Programming
                      option(value='Sports') Sports
                      option(value='History') History
                      option(value='Science') Science
                    .customButton(ng-click='createDeck()') Create
            .col-sm-2
              .victories Victories: {{currentUser.wins}}
              .losses Losses: {{currentUser.losses}}
            .col-sm-2
              .overall Overall Rating: {{currentUser.overallRating}}
              .player-rating Ratings:
                i.fa.fa-thumbs-up{{currentUser.rating.up}}
                i.fa.fa-thumbs-down{{currentUser.rating.down}}
        #yourDecks
          form(novalidate)
            label Sort By Category
            select
              option Programming
              option Sports
              option History
              option Science
  
          .deck(ng-repeat='deck in decks' data-category='deck.category', ng-click='selectDeck(deck._id)')
            .row
              .title {{deck.name}}
              .col-xs-6
                .category {{deck.category}}
                .subCategory {{deck.subCategory || 'No sub-category yet..'}}
                .numCards {{deck.cards.length + ' cards' || 'No cards yet...'}}
              .col-xs-6
                .deckRating: i.fa.fa-thumbs-up{{deck.rating.up}}
                .deckRating: i.fa.fa-thumbs-down{{deck.rating.down}}
                .deckProgress {{'Progress:' + (deck.report || 0) + '%'}}


        #challenges
            h3 Challenges
            .challenge
              .user ToddMan12
              .category Category: Programming
              .sub-category Sub-Category: AngularJS
              button.btn.btn-danger Accept
              button.btn.btn-danger Decline
            .challenge
              .user Avo
              .category Category: Video Games
              .sub-category Sub-Category: Smash Bros.
              button.btn.btn-danger Accept
              button.btn.btn-danger Decline
