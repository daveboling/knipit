include ../partials/card-top.jade

.wrap(ng-hide='isComplete')
  .flip
    .flashCard(ng-class='{"flipped":flipped}', ng-click='flipCard()')
      //question
      .face.front
        #question {{currentCard.question}}

      //answer
      .face.back
        #answer {{currentCard.answer}}
        #THUMBS
          i.fa.fa-thumbs-up.fa-3x.thumbs-up(ng-click='thumbs("up"); flipCard()')
          i.fa.fa-thumbs-down.fa-3x.thumbs-down(ng-click='thumbs("down"); flipCard()') 

.wrap#done(ng-show='isComplete')
      p How'd you do?
      #correct Correct: {{progress.correct}} 
      #wrong Wrong: {{progress.wrong}}
      .customButton(ng-click='again()') Again?
      .customButton(ng-hide='isOwner' ng-click='challengeModal()') Challenge 
      .customButton(ng-click='goToDashboard()') Back to Dashboard


//shuffle Confirmation
.modal.fade#shuffleConfirm(tabindex='-1', role='dialog', aria-labelledby='shuffleModal', aria-hidden='true')
    .modal-dialog.modal-lg
        .modal-content
          .shuffleConfirmation Shuffling the deck will reset your progress. Is that OK?
            .btn.btn-default.full(ng-click='shuffle()' data-toggle='modal' data-target="#shuffleConfirm") Yes
            .btn.btn-default.full(data-toggle='modal' data-target="#shuffleConfirm") No

