h3 Login

form#loginForm(role='form', novalidate, name='userForm')
  .form-group
    label(for='email') Email
    input.form-control#email(type='email', name='email', ng-model='user.email',required)
  .form-group
    label(for='password') Password
    input.form-control#password(type='password', name='password', ng-model='user.password', required, ng-minlength='3')
  button.btn.btn-primary.full(ng-click='login()') Login
  a(href='/#/register/')
    button.btn.btn-danger.full(type='button') Register 

