.navbar.navbar-default(role='navigation', ng-controller='NavCtrl')
  .container#navigation
    .navbar-header
      button.navbar-toggle(data-toggle='collapse', data-target='#bs-navbar-collapse')
        span.sr-only Toggle navigation
        span.icon-bar
        span.icon-bar
        span.icon-bar
      .navbar-brand: img(src='/assets/images/textLogo.png' style='width: 170px')

    .collapse.navbar-collapse#bs-navbar-collapse
      ul.nav.navbar-nav.navbar-right(ng-hide='email')
        li: a(href='/#/') Home
        li: a(href='/#/login') Login
        li: a(href='/#/register') Register
      ul.nav.navbar-nav.navbar-right(ng-show='email')
        li: a(href='/#/') Home
        li: a(href='/#/browse') Browse
        li: a(href='/#/logout') Logout
        li: a(href='/#/user-home')
            img.yourProfile(gravatar-src-once='currentUser.email' gravatar-size="30") 
        li: a(href='/#/user-home')